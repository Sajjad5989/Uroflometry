<resources>

    <!--TOOLBAR-->
    <style name = "tool_bar" parent = "">
        <item name = "android:textColor">@color/white</item>
        <item name = "popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name = "theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name = "android:fontFamily">@font/ir_yekan_medium</item>
    </style>

    <style name = "tool_bar.Title" parent = "android:TextAppearance">
        <item name = "android:textColor">@color/white</item>
        <item name = "android:fontFamily">@font/ir_yekan_medium</item>
    </style>

    <style name = "ActionBarTitle">
        <item name = "android:fontFamily">@font/ir_yekan_medium</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">@dimen/text_size_20_sp</item>
    </style>

    <style name = "tool_bar.Subtitle">
        <item name = "android:textColor">@color/white</item>
        <item name = "android:fontFamily">@font/ir_yekan_light</item>
    </style>

    <style name = "tool_bar.TitleText" parent = "TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name = "android:textSize">@dimen/text_size_16_sp</item>
        <item name = "android:textColor">@color/white</item>
    </style>

    <style name = "BitterTextAppearance">
        <item name = "android:fontFamily">@font/ir_yekan_medium</item>
    </style>


    <style name = "AppTheme" parent = "ParentMaterialTheme">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
        <item name = "android:fontFamily">@font/ir_yekan_medium</item>
    </style>


    <style name = "AppTheme.NoActionBar">
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
        <item name = "android:fontFamily">@font/ir_yekan_medium</item>
    </style>

    <style name = "AppTheme.AppBarOverlay" parent = "ParentMaterialTheme">
        <item name = "android:textColorPrimary">@color/white</item>
        <item name = "android:textSize">14sp</item>
        <item name = "android:windowActionBar">false</item>
        <item name = "android:tileMode">disabled</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:windowBackground">@color/colorAccent</item>
        <item name = "android:fontFamily">@font/ir_yekan_medium</item>
    </style>

    <style name = "AppTheme.PopupOverlay" parent = "ThemeOverlay.AppCompat.Light" />


</resources>
